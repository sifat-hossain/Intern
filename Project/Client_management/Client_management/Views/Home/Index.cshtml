
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/NotificationLayout.cshtml";
}
<link href="~/Content/NotificationStyle.css" rel="stylesheet" />
<h2>Index</h2>
<div class="notificationbody">
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <br />
            <br />
            <ol class="breadcrumb"></ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                @*<div class="col-lg-3 col-xs-6">

                        <div class="small-box bg-aqua">
                            <div class="inner">
                                <h3>150</h3>
                                <p>New Orders</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-bag"></i>
                            </div>
                            <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>*@
                <!-- ./col -->
                <div class="col-lg-4 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-green">
                        <div class="inner">
                            <h3>@ViewBag.Paymentrecieve</h3>
                            <p>Total Payment Recieved</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-4 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-yellow">
                        <div class="inner">
                            <h3>@ViewBag.ServiceList</h3>
                            <p>Total Running Software</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>
                        <a href="~/Added_service/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-4 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-red">
                        <div class="inner">
                            <h3>@ViewBag.DueList</h3>
                            <p>Total Due</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-pie-graph"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
            </div>
            <!-- /.row -->
        </section>
    </div>
</div>


<div class="col-md-12 " style="color:white;margin-top:15px;">
    <div style=" box-shadow: 0 7px 14px rgba(0,0,0,0.25), 0 5px 5px rgba(0,0,0,0.22);min-width:108%; min-height:430px;text-align: center;background-color:lightgray; padding:25px; margin-left:-100px; border-radius:10px;">
        <div id="chartContainer" style="height: 370px; width:1100px; padding-left:60px;margin-left:290px;"></div>
        <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    </div>

</div>
<script>
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
	animationEnabled: true,
    theme: "dark2", // "light1", "light2", "dark1", "dark2"
    exportEnabled: true,
	title: {
		text: "Company Status"
	},
	subtitles: [{
		text: "Numbers Y-Axis",
		fontSize: 18
	}],
	axisY: {
		title: "Numbers Defined in System",
		logarithmic: true
	},
	data: [{
		type: "column",
		indexLabelFontColor: "white",
		indexLabel: "{y}",
		indexLabelFontSize: 16,
		yValueFormatString: "#,##0.#",
		toolTipContent: "<b>{label}: {y}</b>",
		dataPoints:  @Html.Raw(ViewBag.DataPoints)
        }]
        });
        chart.render();
        }
</script>