@model IEnumerable<Client_management.Models.tblClient_profile>

@{
    ViewBag.Title = "Client_details";
}

<h2 style="text-align:center">Client List</h2>
<hr />
<p>
    @Html.ActionLink("Create New", "Client_Registration")
</p>
<table class="table">
    <tr>
        <th>
          Company Name
        </th>
       
        <th>
            Email
        </th>
 
        <th>
         Phone Number
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company_name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Company_email)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Cell_1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Add Service", "Add_service_for_client", "Client", new { id = item.ID },null)
        </td>
    </tr>
}

</table>
